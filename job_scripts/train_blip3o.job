    echo ""
    echo "üîç SUCCESS INDICATORS:"
    echo "  ‚úÖ Non-zero gradients throughout training"
    echo "  ‚úÖ Decreasing loss trend"
    echo "  ‚úÖ Increasing similarity metrics"
    echo "  ‚úÖ Overfitting test achieves >0.8 similarity"
    echo "  ‚úÖ Final CLIP similarity >0.1 (good), >0.4 (excellent)"
    echo "  ‚úÖ Natural embedding norm variation (not forced to 1.0)"
    
    echo ""
    echo "‚úÖ SUCCESS: CLIP reproduction training completed!"
    
else
    echo "‚ùå FAILED: Training exit code $TRAINING_EXIT_CODE"
    echo ""
    echo "üí° Troubleshooting:"
    echo "  ‚Ä¢ Check log files in ./slurm_out/ for detailed error messages"
    echo "  ‚Ä¢ Verify all required Python files are present:"
    echo "    - train_clip_reproduction.py (main script)"
    echo "    - blip3o_clip_dit.py (BLIP3-o DiT model)"
