# =============================================================================
# TASK 2: RECALL EVALUATION (OPTIMIZED)
# =============================================================================

if [ "$RUN_TASK_2" = "true" ]; then
    if [ "$ENABLE_CHECKPOINTING" = "true" ] && check_task_completed "recall"; then
        echo ""
        echo "â­ï¸  Task 2 (Recall) already completed, skipping..."
    else
        echo ""
        echo "ðŸŽ¯ Starting Task 2: Recall Evaluation (OPTIMIZED)"
        echo "================================================="
        echo "ðŸš€ OPTIMIZATIONS APPLIED:"
        echo "   â€¢ Sample size: $EVAL_MAX_SAMPLES (reduced for speed)"
        echo "   â€¢ Batch size: $BATCH_SIZE (increased for efficiency)"
        echo "   â€¢ Fair comparison in CLIP's aligned space"

        RECALL_START_TIME=$(date +%s)

        python evaluate_recall.py \
            --blip3o_model_path "$MODEL_PATH" \
            --coco_root "$COCO_ROOT" \
            --max_samples $EVAL_MAX_SAMPLES \
            --batch_size $BATCH_SIZE \
            --k_values 1 5 10 \
            --device cuda \
            --results_dir "${RESULTS_DIR}/recall" \
            --save_detailed \
            --verbose

        RECALL_EXIT_CODE=$?
        RECALL_END_TIME=$(date +%s)
        RECALL_DURATION=$((RECALL_END_TIME - RECALL_START_TIME))

        if [ $RECALL_EXIT_CODE -eq 0 ]; then
            echo "âœ… Task 2 completed successfully in ${RECALL_DURATION}s"
            if [ "$ENABLE_CHECKPOINTING" = "true" ]; then
                mark_task_completed "recall"
            fi
        else
            echo "âŒ Task 2 failed with exit code: $RECALL_EXIT_CODE"
        fi
    fi
